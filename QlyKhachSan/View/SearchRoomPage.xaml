<Page x:Class="QlyKhachSan.View.SearchRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QlyKhachSan.View"
      mc:Ignorable="d"
      d:DesignHeight="700"
      d:DesignWidth="1000"
      Title="SearchRoomPage">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="#e6f3ff">
            <TextBlock Text="Tra cứu phòng"
                       Margin="0,0,20,0"
                       FontSize="30"
                       FontWeight="Bold"
                       FontFamily="roboto"
                       Foreground="#07209e"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right" />
        </Grid>
        <Grid Background="#e6f3ff"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Margin="10"
                    BorderBrush="#07209e"
                    BorderThickness="2"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    CornerRadius="20">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Mã phòng: "
                               Margin="5"
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="1"
                               Grid.Column="0"
                               HorizontalAlignment="Left" />
                    <TextBlock Text="Tên phòng: "
                               Margin="5"
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="1"
                               Grid.Column="1"
                               HorizontalAlignment="Left" />
                    <TextBlock Text="Mã loại phòng: "
                               Margin="5"
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="1"
                               Grid.Column="2"
                               HorizontalAlignment="Left" />
                    <TextBlock Text="Tên loại phòng: "
                               Margin="5"
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="1"
                               Grid.Column="3"
                               HorizontalAlignment="Left" />
                    <TextBlock Text="Ghi chú: "
                               Margin="5"
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="1"
                               Grid.Column="4"
                               HorizontalAlignment="Left" />

                    <TextBox Grid.Column="0"
                             Grid.Row="2"
                             Margin="5"
                             Style="{StaticResource textbox:style1}" />
                    <TextBox Grid.Column="1"
                             Grid.Row="2"
                             Margin="5"
                             Style="{StaticResource textbox:style1}" />
                    <TextBox Grid.Column="2"
                             Grid.Row="2"
                             Margin="5"
                             Style="{StaticResource textbox:style1}" />
                    <ComboBox  Grid.Column="3"
                               Grid.Row="2"
                               Margin="5"
                               Style="{StaticResource combobox:style1}" />
                    <TextBox Grid.Column="4"
                             Grid.Row="2"
                             Margin="5"
                             Style="{StaticResource textbox:style1}" />
                    <TextBlock Text="Đơn giá "
                               Margin="5"
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="3"
                               Grid.Column="0"
                               HorizontalAlignment="Left" />
                    <StackPanel Grid.Row="3"
                                Grid.Column="1"
                                Orientation="Horizontal">
                        <TextBlock Text="từ: "
                                   Margin="5"
                                   Style="{StaticResource textblock:style1}"
                                   HorizontalAlignment="Left" />
                        <TextBox Margin="5"
                                 Style="{StaticResource textbox:style1}" />
                    </StackPanel>
                    <StackPanel Grid.Row="3"
                                Grid.Column="2"
                                Margin="5"
                                Orientation="Horizontal">
                        <TextBlock Text="đến: "
                                   Style="{StaticResource textblock:style1}"
                                   Margin="5"
                                   HorizontalAlignment="Left" />
                        <TextBox Margin="5"
                                 Style="{StaticResource textbox:style1}" />
                    </StackPanel>
                    <TextBlock Text="Tên khách hàng: "
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="3"
                               Grid.Column="3"
                               Margin="5"
                               HorizontalAlignment="Left" />
                    <TextBox Grid.Column="4"
                             Grid.Row="3"
                             Margin="5"
                             Style="{StaticResource textbox:style1}" />
                    <TextBlock Text="Ngày bắt đầu thuê "
                               Margin="5"
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="4"
                               Grid.Column="0"
                               HorizontalAlignment="Left" />
                    <StackPanel Grid.Row="4"
                                Grid.Column="1"
                                Orientation="Horizontal">
                        <TextBlock Text="từ: "
                                   Margin="5"
                                   Style="{StaticResource textblock:style1}"
                                   HorizontalAlignment="Left" />
                        <DatePicker Margin="5"
                                    Style="{StaticResource datepick:style1}" />
                    </StackPanel>
                    <StackPanel Grid.Row="4"
                                Grid.Column="2"
                                Margin="5"
                                Orientation="Horizontal">
                        <TextBlock Text="đến: "
                                   Style="{StaticResource textblock:style1}"
                                   Margin="5"
                                   HorizontalAlignment="Left" />
                        <DatePicker Margin="5"
                                    Style="{StaticResource datepick:style1}" />
                    </StackPanel>
                    <TextBlock Text="Mã khách hàng: "
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="4"
                               Grid.Column="3"
                               Margin="5"
                               HorizontalAlignment="Left" />
                    <TextBox Grid.Column="4"
                             Grid.Row="4"
                             Margin="5"
                             Style="{StaticResource textbox:style1}" />
                    <TextBlock Text="Ngày kết thúc thuê "
                               Margin="5"
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="5"
                               Grid.Column="0"
                               HorizontalAlignment="Left" />
                    <StackPanel Grid.Row="5"
                                Grid.Column="1"
                                Orientation="Horizontal">
                        <TextBlock Text="từ: "
                                   Margin="5"
                                   Style="{StaticResource textblock:style1}"
                                   HorizontalAlignment="Left" />
                        <DatePicker Margin="5"
                                    Style="{StaticResource datepick:style1}" />
                    </StackPanel>
                    <StackPanel Grid.Row="5"
                                Grid.Column="2"
                                Margin="5"
                                Orientation="Horizontal">
                        <TextBlock Text="đến: "
                                   Style="{StaticResource textblock:style1}"
                                   Margin="5"
                                   HorizontalAlignment="Left" />
                        <DatePicker Margin="5"
                                    Style="{StaticResource datepick:style1}" />
                    </StackPanel>
                    <TextBlock Text="Địa chỉ: "
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="5"
                               Grid.Column="3"
                               Margin="5"
                               HorizontalAlignment="Left" />
                    <TextBox Grid.Column="4"
                             Grid.Row="5"
                             Margin="5"
                             Style="{StaticResource textbox:style1}" />
                    <TextBlock Text="Mã phiếu thuê "
                               Margin="5"
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="6"
                               Grid.Column="0"
                               HorizontalAlignment="Left" />
                    <StackPanel Grid.Row="6"
                                Grid.Column="1"
                                Orientation="Horizontal">
                        <TextBlock Text="từ: "
                                   Margin="5"
                                   Style="{StaticResource textblock:style1}"
                                   HorizontalAlignment="Left" />
                        <TextBox Margin="5"
                                 Style="{StaticResource textbox:style1}" />
                    </StackPanel>
                    <StackPanel Grid.Row="6"
                                Grid.Column="2"
                                Margin="5"
                                Orientation="Horizontal">
                        <TextBlock Text="đến: "
                                   Style="{StaticResource textblock:style1}"
                                   Margin="5"
                                   HorizontalAlignment="Left" />
                        <TextBox Margin="5"
                                 Style="{StaticResource textbox:style1}" />
                    </StackPanel>
                    <TextBlock Text="CMND: "
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="6"
                               Grid.Column="3"
                               Margin="5"
                               HorizontalAlignment="Left" />
                    <TextBox Grid.Column="4"
                             Grid.Row="6"
                             Margin="5"
                             Style="{StaticResource textbox:style1}" />
                    <TextBlock Text="Mã loại khách hàng: "
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="7"
                               Grid.Column="0"
                               Margin="5"
                               HorizontalAlignment="Left" />
                    <ComboBox  Grid.Column="1"
                               Grid.Row="7"
                               Margin="5"
                               Style="{StaticResource combobox:style1}" />
                    <TextBlock Text="Tên loại khách hàng: "
                               Style="{StaticResource textblock:style1}"
                               Grid.Row="7"
                               Grid.Column="3"
                               Margin="5"
                               HorizontalAlignment="Left" />
                    <TextBox Grid.Column="4"
                             Grid.Row="7"
                             Margin="5"
                             Style="{StaticResource textbox:style1}" />
                    <Button Grid.Column="4"
                            Grid.Row="8"
                            Content="Tra cứu phòng"
                            Margin="5"
                            Style="{StaticResource button:style1}" />
                </Grid>

            </Border>
            <DataGrid x:Name="taikhoan"
                      Grid.Row="1"
                      FontSize="14"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      SelectedItem="{Binding SelectedTaiKhoan, Mode=OneWayToSource}"
                      ItemsSource="{Binding TaiKhoanList}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên phòng"
                                        Width="*"
                                        Binding="{Binding UserID}" />
                    <DataGridTextColumn Header="Tên loại phòng"
                                        Width="*"
                                        Binding="{Binding UserName}" />
                    <DataGridTextColumn Header="Đơn giá"
                                        Width="*"
                                        Binding="{Binding Password}" />
                    <DataGridTextColumn Header="Tình trạng"
                                        Width="*"
                                        Binding="{Binding Email}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>